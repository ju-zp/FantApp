

<div >
    <div class = "avatar-image">    
        <% if @user.avatar.attached? %>
            <%= image_tag @user.avatar %>
    </div>
    <% end %>
        <h1><%=@user.username.capitalize%></h1>
</div>


<hr>
<%if @user.characters.length > 0%>
    <h3>Your characters are;</h3>
    <ol>
    <%@user.characters.each do |c|%>
        <li>
            <h3><%=link_to c.name, c%></h3>
        </li>
    <%end%>
    </ol>
<%else%>
    <h3>You have no characters yet. Create one now!</h3>

<%end%>

    <div class=flex_item id=new_character_button>
    <%=form_tag(new_character_path, :method => "get") do %>
        <%submit_tag "Create a new Character", class: "btn btn-success", name: nil%>
    <%end%>
    </div>
<hr>
<div class=flex_buttons>
    <div class=flex_item>
    <%=form_tag(edit_user_path(@user), :method => "get") do %>
        <%submit_tag "Edit profile", class: "btn btn-outline-danger", name: nil%>
    <%end%>
    </div>

    <div class=flex_item>
    <%=form_tag(user_path(@user), :method => "delete") do %>
        <%submit_tag "Delete my profile", class: "btn btn-danger"%>
    <%end%>
    </div>



</div>
