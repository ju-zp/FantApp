<%= form_tag ({controller: 'sessions', action: 'create', method: 'post'}) do %>
    <div class="form-group row">
      <%=label_tag :username, nil, class: "col-sm-3 col-form-label"%>
        <div class="col-sm-9  ">
          <%=text_field_tag :username%><br>
        </div>
    </div>
    <div class="form-group row">
      <%=label_tag :password, nil, class: "col-sm-3 col-form-label"%>
      <div class="col-sm-9">
        <%=password_field_tag :password%><br>
      </div>
    </div>
    <div class="form-group row">
      <%=label_tag :password_confirmation, nil, class: "col-sm-3 col-form-label"%>
       <div class="col-sm-9">
          <%=password_field_tag :password_confirmation%><br>
       </div>
    </div>    
    <%=submit_tag "Sign up!", class: "btn btn-success"%>
  <% end %>
